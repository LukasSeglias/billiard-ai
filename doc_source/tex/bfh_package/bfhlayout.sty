\newtriplepagestyle{BFHInFoot}% Sets the name of the School in the footline,
% nothing else
% This Style is used on the Thesis Titlepage and as usual Style in a Report
% and lecture Notes (But I do not like the latter for a lecture Note (HEH2))
[0pt]%[thickness of the outer linen ]
[0pt]%[thickness of the inner linen ]
{}%{inner head element }
{}%{centre head element }
{}%{outer head element }
{\normalfont\color{BFHGray}Berner Fachhochschule | Haute \'ecole
sp\'ecialis\'ee bernoise | Bern University of Applied Sciences}%{inner foot element }
{}%{centre foot element }
{}% {outer foot element }
%%%%%%%%%%%%%
\newtriplepagestyle{BFHThesisBody}%
  [0pt]%[thickness of the outer linen ]
  [0pt]%[thickness of the inner linen ]
  {}%{inner head element }
  {}%{centre head element }
  {}%{outer head element }
  {\normalfont\color{BFHGray}\@shorttitle, Version \@version, \@date}%{inner foot element }
{}%{centre foot element }
{\normalfont\color{BFHGray}\thepage}% {outer foot element }
